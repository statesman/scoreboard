<div class="inner{{#if HomeTeamFav}} faved{{else}}{{#if AwayTeamFav}} faved{{/if}}{{/if}}{{#if GameScoreIsFinal}} played{{/if}}">
  {{#if GameScoreIsFinal}}
    <div class="row team away-team{{#if AwayTeamWon}} winner{{/if}}">
      <div class="small-9 medium-8 columns">
        <span class="team-name">{{AwayTeamName}}</span> <div class="inline-block"><span class="mascot">{{AwayTeamNickname}}</span>{{favAway AwayTeamFav}}</div>
      </div>
      <div class="small-3 medium-4 columns text-right">
        <i class="fa fa-chevron-right"></i>{{AwayTeamScore}}
      </div>
    </div>
    <div class="row team home-team{{#if HomeTeamWon}} winner{{/if}}">
      <div class="small-9 medium-8 columns">
        <span class="team-name">{{HomeTeamName}}</span> <div class="inline-block"><span class="mascot">{{HomeTeamNickname}}</span>{{favHome HomeTeamFav}}</div>
      </div>
      <div class="small-3 medium-4 columns text-right">
        <i class="fa fa-chevron-right"></i>{{HomeTeamScore}}
      </div>
    </div>
    <div class="row">
      <div class="small-12 columns game-meta">
        <hr class="show-for-medium-up" />
        {{date GameTimestamp}} <span class="right">Final</span>
      </div>
    </div>
  {{else}}
    <div class="row">
      <div class="small-8 columns">
        <div class="team away-team{{#if AwayTeamWon}} winner{{/if}}">
          <span class="team-name">{{AwayTeamName}}</span> <div class="inline-block"><span class="mascot">{{AwayTeamNickname}}</span>{{favAway AwayTeamFav}}</div>
        </div>
        <div class="team home-team{{#if HomeTeamWon}} winner{{/if}}">
          <span class="team-name">{{HomeTeamName}}</span> <div class="inline-block"><span class="mascot">{{HomeTeamNickname}}</span>{{favHome HomeTeamFav}}</div>
        </div>
      </div>
      <div class="small-4 columns text-right game-time">{{dateTime GameTimestamp}}</div>
    </div>
    {{#if venueName}}
      <div class="row">
        <div class="small-12 columns game-meta">
          <hr class="show-for-medium-up" />
          <span class="venue">{{venueName}}</span>
        </div>
      </div>
    {{/if}}
  {{/if}}
</div>
